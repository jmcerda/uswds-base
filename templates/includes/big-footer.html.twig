{% if page.footer_menu or page.footer %}
  <div class="usa-footer__primary-section big-foot">
    <div class="grid-container">
      {% if page.footer_menu %}
        <div class="grid-row grid-gap">
          <div class="tablet:grid-col-12">
            <nav class="usa-footer__nav" aria-label="Footer navigation">
              {{ page.footer_menu }}
            </nav>
          </div>
        </div>
      {% endif %}
      {% if page.footer %}
        <div class="grid-row grid-gap">
          <div class="mobile-lg:grid-col-12">
            {{ page.footer }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
{% if footer_agency_logo or footer_agency_name or footer_social or footer_contact or page.footer_secondary %}
  <div class="usa-footer__secondary-section">
    <div class="grid-container">
      <div class="grid-row grid-gap">
        {% if footer_agency_logo or footer_agency_name %}
          <div class="usa-footer__logo grid-row mobile-lg:grid-col-6 mobile-lg:grid-gap-2">
            {% if footer_agency_logo %}
              <div class="mobile-lg:grid-col-auto">
                <img class="usa-footer__logo-img" src="{{ footer_agency_logo }}" alt="{{ footer_agency_name }} logo">
              </div>
            {% endif %}
            {% if footer_agency_name %}
              <div class="mobile-lg:grid-col-auto">
                <p class="usa-footer__logo-heading">{{ footer_agency_name | raw }}</p>
              </div>
            {% endif %}
          </div>
        {% endif %}
        <div class="usa-footer__contact-links mobile-lg:grid-col-6">
          {% if facebook or twitter or youtube or rss %}
            <div class="usa-footer__social-links grid-row grid-gap-1">
              {% if facebook %}
                <div class="grid-col-auto">
                  <a class="usa-social-link" href="{{ facebook }}">
                    <img class="usa-social-link__icon" src="./assets/img/usa-icons/facebook.svg" alt="Facebook">
                  </a>
                </div>
              {% endif %}
              {% if twitter %}
                <div class="grid-col-auto">
                  <a class="usa-social-link" href="{{ twitter }}">
                    <img class="usa-social-link__icon" src="./assets/img/usa-icons/twitter.svg" alt="Twitter">
                  </a>
                </div>
              {% endif %}
              {% if youtube %}
                <div class="grid-col-auto">
                  <a class="usa-social-link" href="{{ youtube }}">
                    <img class="usa-social-link__icon" src="./assets/img/usa-icons/youtube.svg" alt="YouTube">
                  </a>
                </div>
              {% endif %}
              {% if instagram %}
                <div class="grid-col-auto">
                  <a class="usa-social-link" href="{{ instagram }}">
                    <img class="usa-social-link__icon" src="./assets/img/usa-icons/instagram.svg" alt="Instagram">
                  </a>
                </div>
              {% endif %}
              {% if linkedin %}
                <div class="grid-col-auto">
                  <a class="usa-social-link" href="{{ linkedin }}">
                    <img class="usa-social-link__icon" src="./assets/img/oig-base-icons/linkedin.svg" alt="Instagram">
                  </a>
                </div>
              {% endif %}
              {% if rss %}
                <div class="grid-col-auto">
                  <a class="usa-social-link" href="{{ rss }}">
                    <img class="usa-social-link__icon" src="./assets/img/usa-icons/rss_feed.svg" alt="RSS">
                  </a>
                </div>
              {% endif %}
            </div>
          {% endif %}
          {% if footer_contact or contact_center %}
            {% if contact_center %}
              <h3 class="usa-footer__contact-heading">{{ contact_center | raw }}</h3>
            {% endif %}
            <address class="usa-footer__address">
              <div class="usa-footer__contact-info grid-row grid-gap">
                {% if phone %}
                  <div class="grid-col-auto">
                    <a href="tel:{{ phone }}">{{ phone }}</a>
                  </div>
                {% endif %}
                {% if email %}
                  <div class="grid-col-auto">
                    <a href="mailto:{{ email }}">{{ email }}</a>
                  </div>
                {% endif %}
              </div>
            </address>
          {% endif %}
        </div>
      </div>
      {% if page.footer_secondary %}
        <div class="grid-row grid-gap">
          <div class="mobile-lg:grid-col-12">
            {{ page.footer_secondary }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
