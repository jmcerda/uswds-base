{#
/**
 * @file
 * Default theme implementation for a 'button' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the button element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_button()
 *
 * @ingroup themeable
 */
#}

{% if attributes.value and attributes.value == 'search-icon' %}
    <button{{ attributes }}>
        <img src="{{ base_path ~ directory }}/assets/img/usa-icons-bg/search--white.svg" class="usa-search__submit-icon" alt="Search">
    </button>{{ children }}
{% else %}
<button{{ attributes }}>{{ attributes.value }}</button>{{ children }}
{% endif %}

