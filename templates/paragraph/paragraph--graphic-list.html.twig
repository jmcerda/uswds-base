{% block paragraph %}
  <div{{ attributes }}>
    {% if paragraph.field_edge_to_edge.value %}
      <div {{ attributes.addClass('full-width-container') }} style="background-color:{{ paragraph.field_background_color.0.value.color }};">
    {% endif %}
        {% block content %}
          <section class="usa-graphic-list usa-section usa-section--dark">
            <div class="grid-container">
              <div class="usa-graphic-list__row grid-row grid-gap">
                <h2>{{ content.field_title }}</h2>
                {# Bypass field wrappers #}
                {% for key,value in paragraph.field_media_blocks.value %}
                  {{ content.field_media_blocks[key] }}
                {% endfor %}
              </div>
            </div>
          </section>
        {% endblock %}
    {% if paragraph.field_edge_to_edge.value %}
      </div>
    {% endif %}
  </div>
{% endblock paragraph %}
